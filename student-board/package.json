{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "postcss resources/css/app.css -o public/css/app.css",
  "watch": "postcss resources/css/app.css -o public/css/app.css --watch",
        "dev": "vite",
        "build:js": "vite build",
        "build:css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --minify",
        "watch:css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --watch",
        "start": "concurrently \"npm run watch:css\" \"npm run dev\" "
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/vite": "^4.0.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.21",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "tailwindcss": "^3.4.17",
        "vite": "^7.0.4"
    }
}
